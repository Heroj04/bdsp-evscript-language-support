{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "EvScript",
	"patterns": [
		{
			"include": "#labels"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"labels": {
			"patterns": [
				{
					"begin": "^((?:\\w|\\\\)+)(:)(.*)",
					"while": "^(\\t)(.*)",
					"beginCaptures": {
						"1": {
							"name": "entity.name.tag.label.evscript"
						},
						"2": {
							"name": "punctuation.label.colon"
						},
						"3": {
							"patterns": [
								{
									"include": "#comments"
								}
							]
						}
					},
					"whileCaptures": {
						"2": {
							"patterns": [
								{
									"include": "#commands"
								},
								{
									"include": "#commands-paren"
								},
								{
									"include": "#comments"
								}
							]
						}
					}
				}
			]
		},
		"commands": {
			"patterns": [
				{
					"name": "entity.name.function.command.evscript",
					"match": "\\b\\w+\\b(?=\\(.*)"
				}
			]
		},
		"commands-paren": {
			"patterns": [
				{
					"begin": "(?<=\\b\\w+\\b)\\(",
					"end": "\\)",
					"beginCaptures": {
						"0": {
							"name": "punctuation.paren.open"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.paren.close"
						}
					},
					"patterns": [
						{
							"name": "punctuation.argument.seperator",
							"match": "(?<!\\()\\s*,\\s*"
						},
						{
							"include": "#strings"
						},
						{
							"include": "#arguments"
						},
						{
							"include": "#comments"
						}
					]
				}
			]
		},
		"strings": {
			"name": "string.quoted.evscript",
			"begin": "'",
			"end": "'",
			"beginCaptures": {
				"0": {
					"name": "string.quoted.open.evscript"
				}
			},
			"endCaptures": {
				"0": {
					"name": "string.quoted.close.evscript"
				}
			},
			"patterns": [
				{
					"name": "constant.character.escape.evscript",
					"match": "\\\\."
				},
				{
					"include": "#comments"
				}
			]
		},
		"arguments": {
			"patterns": [
				{
					"name": "variable.parameter.work.evscript",
					"match": "(?<=\\(\\s*|\\s*,\\s*)@\\w+\\b"
				},
				{
					"name": "variable.parameter.flag.evscript",
					"match": "(?<=\\(\\s*|\\s*,\\s*)\\#\\w+\\b"
				},
				{
					"name": "variable.parameter.sysflag.evscript",
					"match": "(?<=\\(\\s*|\\s*,\\s*)\\$\\w+\\b"
				},
				{
					"name": "constant.numeric.evscript",
					"match": "(?<=\\(\\s*|\\s*,\\s*)((?<!@|#|\\$)\\b|(?<=\\W)-)\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.evscript",
					"match": ";.*"
				}
			]
		}
	},
	"scopeName": "source.ev"
}